<h2>TDs</h2>

<table>
  <thead>

    <tr>
    	<th>Issue ID</th>
    	<th>TD ID</th>
    	<th>Is TD</th>
    	<th>Tracker</th>
    	<th>Status</th>
    	<th>Subject</th>
    	<th>Assignee</th>
    </tr>

  </thead>

  <tbody>
    <% @tds.each do |td| %>
      <tr>
	<th><%= td.issue.id %></th>
    	<th><%= td.id %></th>
    	<th><%= td.istd %></th>
    	<th><%= td.issue.tracker %></th>
    	<th><%= td.issue.status %></th>
    	<th><%= td.issue.subject %></th>
    	<th><%= td.issue.assigned_to %></th>
      </tr>
    <% end %>
  </thead>

</table>
<% @tds.each do |td| %>
  <p>
    <%= td.issue %>, 
    <%= td.istd %>:
    <%= link_to 'Switch', { action: 'switch', id: td[:id], project_id: @project }, method: :post %>, 
    <%= link_to 'Delete', td_path(project_id: @project, id: td), method: :delete %>
  </p>
<% end %>

<%= form_with url: create_td_path, method: :post, local: true do |form| %>
  <%= form.hidden_field :project_id, value: @project.id %>
  <div class="istd_field">
    <%= form.label :istd %>
    <%= form.check_box :istd %>
  </div>
  <div class="project_id_field">
    <%= form.label :issue_id %>
    <%= form.text_field :issue_id, type: 'number'%>
  </div>
  <div class="actions">
    <%= form.submit "Create TD" %>
  </div>
<% end %>

